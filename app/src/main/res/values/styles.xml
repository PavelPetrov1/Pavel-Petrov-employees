<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WeightedCenteredLargeText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        textAppearance="@style/TextAppearance.AppCompat.Large"
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VerticalDividerStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

</resources>